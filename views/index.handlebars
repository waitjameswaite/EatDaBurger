<div class="container">

  <h1 id="title" class="text-center">EAT DA BURGER</h1>

  <div class="row">
    <div class="col-md-12 text-center">
      <img src="/assets/img/burger.png" id="burger-pic" />
    </div>
  </div>

  <div class="row">

    <div class="col-md-6 text-center">
      <h4>Burgers You Can Eat</h4>
      <ul class="list-group noteaten">
        {{#each burgers}}
          {{#if this.devoured}}
            {{else}}
              <li class="list-group-item">
                <form action = "/burgers/update/{{this.id}}?_method=PUT" method="POST">
                  <input type="hidden" name="devoured" value="true">
                  <button class="noteaten btn" type="submit">Devour the {{this.burger_name}}
                  </button>
                </form>
              </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>

    <div class="col-md-6 text-center">
      <h4>Eaten Burgers</h4>
      <ul class="list-group eaten">
        {{#each burgers}}
          {{#if this.devoured}}
            <li class="list-group-item">
              <form action = "burgers/delete/{{this.id }}?_method=DELETE" method="POST">
                <button class="eaten btn" type="submit">Delete {{this.burger_name}} From The Menu
                </button>
              </form>
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>

  </div>

  <div class="row">

    <div class="col-md-4"></div>

    <div class="col-md-4 text-center">
      <ul class="list-group add">
        <li class="list-group-item">
          <form action="/burgers/new" method="post">
            <input class="form-control" name="burger" placeholder="Add A New Burger">
            </input>
            <button class="add btn" type="submit" id="add-burger">Add A Burger To The Menu
            </button>
          </form>
        </li>
      </ul>
    </div>

    <div class="col-md-4"></div>
    
  </div>

</div>